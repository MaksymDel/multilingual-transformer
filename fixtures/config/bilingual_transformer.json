{
  "vocabulary": {
    "max_vocab_size": {
      "source_tokens": 14000,
      "target_tokens": 14000
    }
  },
  "dataset_reader": {
    "type": "bilingual",
    "lazy": false
  },
  "train_data_path": "fixtures/data/seq2seq_copy.tsv",
  "validation_data_path": "fixtures/data/seq2seq_copy.tsv",
  "model": {
    "type": "bilingual_transformer",
    "architecture": "transformer_iwslt_de_en"
  },
  "iterator": {
    "type": "bucket",
    "batch_size" : 4,
    "sorting_keys": [["tokens_A", "num_tokens"]],
    "biggest_batch_first": true
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "num_serialized_models_to_keep": 2,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    }
  }
}
