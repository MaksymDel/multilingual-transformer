{
  "vocabulary": {
    "max_vocab_size": {
      "source_tokens": 14000,
      "target_tokens": 14000
    }
  },
  "dataset_reader": {
    "type": "fairseq_mt",
    "source_tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "just_spaces"
      }
    },
    "target_tokenizer": {
      "type": "word"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "target_tokens"
      }
    }
  },
  "train_data_path": "fixtures/data/seq2seq_copy.tsv",
  "validation_data_path": "fixtures/data/seq2seq_copy.tsv",
  "model": {
    "type": "fairseq_transformer",
    "source_namespace": "source_tokens",
    "target_namespace": "target_tokens",
    "architecture": "transformer_iwslt_de_en"
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 4,
    "sorting_keys": [["source_tokens", "num_tokens"]]
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "num_serialized_models_to_keep": 2,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    }
  }
}
