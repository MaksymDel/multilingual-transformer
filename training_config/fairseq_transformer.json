{
  "vocabulary": {
    "max_vocab_size": {
      "source_tokens": 15000,
      "target_tokens": 15000
    }
  },
  "dataset_reader": {
    "type": "fairseq_mt",
    "source_tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "just_spaces"
      }
    },
    "target_tokenizer": {
      "type": "word"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "target_tokens"
      }
    }
  },
  "train_data_path": "../data/iwslt14.tokenized.de-en/train.de-en",
  "validation_data_path": "../data/iwslt14.tokenized.de-en/valid.de-en",

  "model": {
    "type": "fairseq_transformer",
    "source_namespace": "source_tokens",
    "target_namespace": "target_tokens",
    "architecture": "transformer_iwslt_de_en"
  },
  "iterator": {
    "type": "bucket",
    "batch_size" : 64,
    "sorting_keys": [["source_tokens", "num_tokens"]],
    "biggest_batch_first": true
  },
  "trainer": {
    "num_epochs": 100,
    "patience": 10,
    "cuda_device": 0,
    "num_serialized_models_to_keep": 5,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001,
      "betas": [0.9, 0.9]
    }
  }
}
